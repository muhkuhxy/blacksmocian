---
import { Picture } from "@astrojs/image/components";
import SmokeLines from "../components/icons/SmokeLines.astro";
import Wood from './assets/daten-smoldering-fire.jpg'
import Smoker from './assets/daten-smoker-voll.jpg'
---
<div class="absolute inset-x-0 h-[var(--bgHeight)] z-20">
  <Picture src={Wood} widths={[1920]} sizes="1920" alt="">
  </Picture>
</div>
<div class="relative grid grid-cols-2 grid-rows-[auto,auto,1fr] grid-cols-[1fr,7rem,1fr,8rem] mt-[var(--bgHeight)] gap-y-16 pt-20 [--padding:2rem] z-30">
  <figure class="row-start-1 row-span-full col-start-1 grid [grid-template:1fr/1fr] -mt-48 h-min">
    <div class="[grid-area:1/1/-1/-1] relative shadow">
      <Picture src={Smoker} widths={[600]} sizes="600" alt="">
      </Picture>
    </div>
    <figcaption class="[grid-area:1/1/-1/-1] place-self-end pr-[1em] translate-y-[3.2rem] cursive text-ember text-4xl">
      Gebaut um ein<br>Leben lang zu halten
    </figcaption>
  </figure>
  <h2 class="row-start-1 col-start-1 relative col-span-3 justify-self-end steel text-9xl">
    Technische Daten
    <div class="w-16 absolute left-0 top-0 -translate-x-8 translate-y-[-150%] fill-white">
      <SmokeLines></SmokeLines>
    </div>
  </h2>
  <p class="row-start-2 col-start-3 pl-[var(--padding)]">
    Lorem ipsum dolor sit amet consectetur, adipisicing elit. Sunt nobis, reprehenderit exercitationem itaque soluta non quae eligendi commodi illo quod vitae quas culpa quasi consequatur dolore! Voluptate ducimus reprehenderit similique!
  </p>
  <table class="row-start-3 col-start-3 border-white">
    <tbody>
      <tr>
        <th>Ma√üe</th>
        <td>1.800mm x 850mm x 2.100mm (LxBxH)</td>
      </tr>
      <tr>
        <th>Gewicht</th>
        <td>ca. 225 kg</td>
      </tr>
      <tr>
        <th>Material</th>
        <td>hochwertiger Edelstahl</td>
      </tr>
      <tr>
        <th>Lorem</th>
        <td>psum dolor sit amet</td>
      </tr>
      <tr>
        <th>Ipsum</th>
        <td>adipisicing elit</td>
      </tr>
    </tbody>
  </table>
  <div class="row-start-3 col-start-4 flex flex-col justify-center items-center space-y-1">
    {
      [...Array(6)].map(_ => (
        <div class="border-4 rounded-full"></div>
      ))
    }
  </div>
</div>

<style>
  tr:not(:first-child) {
    @apply border-t;
  }
  
  tr > * {
    @apply py-2 px-[var(--padding)];

    &:is(th) {
      @apply border-r text-left;
    }
  }
</style>

<style define:vars={{ bgHeight: '663px' }}></style>